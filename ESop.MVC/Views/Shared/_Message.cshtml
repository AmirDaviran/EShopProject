<script>
    function showAlert(type, title, text) {
        Swal.fire({
            icon: type,
            title: title,
            text: text,
            confirmButtonText: 'OK',
            customClass: {
                popup: 'my-popup-class', // custom class to apply to the popup
            },
            showClass: {
                popup: 'swal2-show', // show transition
            },
            hideClass: {
                popup: 'swal2-hide', // hide transition
            }
        });
    }
</script>
