@model EShop.Domain.ViewModels.FAQ.ExplanationDetailViewModel

<div class="container">
    <div class="ui-box bg-white">
        <div class="ui-box-content">
            <h4 class="text-center mb-4">@ViewData["Title"]</h4>

            <div class="faq-explanation">
                @if (!string.IsNullOrEmpty(Model.Explanation))
                {
                    <div class="alert alert-info">
                        @Html.Raw(Model.Explanation)
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        توضیحاتی برای این سوال ثبت نشده است
                    </div>
                }
            </div>

            <div class="text-center mt-4">
                <a asp-action="List" class="btn btn-primary">بازگشت به لیست</a>
            </div>
        </div>
    </div>
</div>