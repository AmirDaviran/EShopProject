@using EShop.Application.Utilities.Convertors
@using EShop.Application.Utilities.Convertors.Date
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<EShop.Domain.ViewModels.Products.Product.ProductViewModel>

@{
    ViewData["Title"] = "لیست محصولات";
}

<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="card">
            <div class="card-datatable table-responsive">
                <!-- فراخوانی partial view برای فرم فیلتر و جستجو -->
                <partial name="_ProductTableActions" />

                <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper dt-bootstrap5 no-footer">
                    <table class="datatables-products table border-top dataTable no-footer dtr-column" id="DataTables_Table_0" aria-describedby="DataTables_Table_0_info">
                        <!-- هدر جدول -->
                        <thead>
                            <tr>
                                <th class="sorting sorting_desc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 148.25px;" aria-sort="descending">آیدی</th>
                                <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 145.859px;">عنوان</th>
                                <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 148.625px;">قیمت</th>
                                <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 184.359px;">تاریخ ایجاد</th>
                                <th class="sorting_disabled" rowspan="1" colspan="1" style="width: 191.656px;">عملیات</th>
                            </tr>
                        </thead>
                        <tbody>

                                @foreach (var product in Model)
                                {
                                    <tr>
                                        <td>@product.Id</td>
                                        <td>@product.Title</td>
                                        <td>@product.Price</td>
                                        <td>@product.CreatedDate.ToShamsi()</td>
                                        <td style="display: flex; gap: 10px;">
                                            <!-- دکمه ویرایش -->
                                            <a class="btn btn-primary btn-sm" asp-action="Update" asp-controller="Product" asp-area="Admin" asp-route-id="@product.Id">
                                                <i class="bx bx-edit-alt me-1"></i> ویرایش
                                            </a>
                                            <!-- دکمه حذف -->
                                            <form asp-action="Delete" asp-controller="Product" asp-area="Admin" method="post" id="delete-form-@product.Id">
                                                <input type="hidden" name="id" value="@product.Id" />
                                                <button type="button" class="btn btn-danger btn-sm" onclick="if(confirm('آیا مطمئن هستید که می‌خواهید این محصول را حذف کنید؟')) { document.getElementById('delete-form-@product.Id').submit(); }">
                                                    <i class="bx bx-trash me-1"></i> حذف
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            
                            else
                            {
                                <tr class="odd">
                                    <td valign="top" colspan="5" class="text-center">هیچ محصولی یافت نشد</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- صفحه‌بندی -->
                   @*  <partial name="_AdminPagination" model="@Model.GetCurrentPaging()" /> *@
                </div>
            </div>
        </div>
    </div>
</div>