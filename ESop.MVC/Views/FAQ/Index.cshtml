@using EShop.Domain.ViewModels.FAQ
@model List<FAQViewModel>

@{

    ViewData["Title"] = "پرسش و پاسخ های متداول";
}

<div class="container">
    <!-- start of box => faqs -->
    <div class="ui-box bg-white">
        <div class="ui-box-content">
            <div class="fs-4 fw-bold text-center mb-4">پاسخ پرسش های پرتکرار</div>
            <div class="row mb-3">
                <div class="col-lg-6 mx-auto">
                    <!-- start of search-in-questions -->
                    <form action="#" class="search-in-questions">
                        <!-- start of form-element -->
                        <div class="form-element-row with-btn">
                            <input type="text" class="form-control w-100" placeholder="پرسش خود را جستجو کنید">
                            <button class="btn btn-primary">جستجو</button>
                        </div>
                        <!-- end of form-element -->
                    </form>
                    <!-- end of search-in-questions -->
                </div>
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="accordain" id="accordionExample">
                    @foreach (var item in Model)
                    {
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="heading-@item.Id">
                                <!-- Use a unique ID for each header -->
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@item.Id" aria-expanded="false" aria-controls="collapse-@item.Id">
                                    @item.Question
                                </button>
                            </h2>
                            <div id="collapse-@item.Id" class="accordion-collapse collapse" aria-labelledby="heading-@item.Id" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    @item.Answer
                                </div>
                            </div>
                        </div>
                        <!-- end of accordion-item -->
                    }

                </div>
            }
            else
            {
                <div class="alert alert-info">
                    هیچ سوالی نیست!
                </div>
            }
        </div>
    </div>
    <!-- end of box => faqs -->
</div>