@if (TempData["SuccessMessage"] != null ||
TempData["WarningMessage"] != null ||
TempData["ErrorMessage"] != null ||
TempData["InfoMessage"] != null)
{
    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            $(document).ready(function () {
                showAlert('success', '@TempData["SuccessMessage"]', 'پیغام موفقیت')
            });
        </script>
    }

    @if (TempData["WarningMessage"] != null)
    {
        <script>
            $(document).ready(function () {
                showAlert('warning', '@TempData["WarningMessage"]', 'پیغام اخطار')
            });
        </script>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <script>
            $(document).ready(function () {
                showAlert('error', '@TempData["ErrorMessage"]', 'پیغام خطا')
            });
        </script>
    }

    @if (TempData["InfoMessage"] != null)
    {
        <script>
            $(document).ready(function () {
                showAlert('info', '@TempData["InfoMessage"]', 'پیغام اطالاعیه')
            });
        </script>
    }
}


