<form method="get" asp-action="List" id="filter-search">
    <div class="row mx-2">
        <!-- فیلتر تعداد نمایش داده‌ها -->
        <div class="col-md-2">
            <div class="dataTables_length" id="DataTables_Table_0_length">
                <label>
                    <select name="TakeEntity" class="form-select" onchange="this.form.submit()">
                        <option value="10">10</option>
                        <option value="25">25</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                </label>
            </div>
        </div>

        <!-- بخش جستجو و دکمه‌ها -->
        <div class="col-md-10">
            <div class="d-flex justify-content-between align-items-center">
                <!-- فیلتر جستجو -->
                <div id="DataTables_Table_0_filter" class="dataTables_filter">
                    <label>
                        <input type="search" name="SearchTerm" class="form-control" placeholder="Search..">
                    </label>
                    <a class="btn btn-primary add-new" asp-action="list">
                        <span class="d-none d-sm-inline-block">ریست</span>
                    </a>
                </div>

                <!-- دکمه‌های عملیات -->
                <div class="btn-group d-flex align-items-center">
                    <button class="btn btn-secondary buttons-collection dropdown-toggle btn-outline-secondary mx-2" type="button">
                        <span><i class="bx bx-export me-1"></i>Export</span>
                    </button>

                    <!-- دکمه افزودن دسته‌بندی -->
                    <a class="btn btn-primary add-new" asp-action="Create" asp-controller="Category" asp-area="Admin">
                        <span><i class="bx bx-plus me-0 me-sm-1"></i><span class="d-none d-sm-inline-block">افزودن دسته‌بندی جدید</span></span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>
