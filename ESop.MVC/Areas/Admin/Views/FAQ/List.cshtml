@using EShop.Domain.ViewModels.FAQ
@model List<FAQViewModel>

@{
    ViewData["Title"] = "سوالات متداول";
}


<div class="card mb-4">

    <div class="card-body">
    </div>
</div>
<div class="row">
    <div class="col-12 mb-3">
        <a class="btn btn-primary" asp-action="Create">
            افزودن
        </a>
    </div>

</div>
<hr />
<div class="col-12">
    @if (Model != null && Model.Any())
    {

        <table class="table table-hover table-striped">

            <thead>
                <tr>
                    <th>سوالات</th>
                    <th>جواب ها</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var mod in Model)
                {
                    <tr>
                        <td>@mod.Question</td>
                        <td>@mod.Answer</td>
                        <td>
                            <a class="btn btn-sm btn-warning" asp-action="Update" asp-route-id="@mod.Id">
                                ویرایش
                            </a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@mod.Id">
                                حذف
                            </a>
                        </td>
                    </tr>
                }
            </tbody>


        </table>


    }
    else
    {
        <div class="alert-info">
            هیچ سوالی نیست!

        </div>

    }


</div>
