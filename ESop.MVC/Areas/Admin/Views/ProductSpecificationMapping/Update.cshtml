@model EShop.Domain.ViewModels.Products.Product_Specification.AddSpecificationToProductViewModel
@{
    ViewData["Title"] = "ویرایش مشخصه محصول";
}

<form asp-action="Edit" method="post" class="form">
    <input type="hidden" asp-for="ProductId" />
    <input type="hidden" name="mappingId" value="@ViewBag.MappingId" />
    <div class="form-group">
        <label asp-for="SpecificationId">نام مشخصه</label>
        <select asp-for="SpecificationId" class="form-control" asp-items="ViewBag.Specifications">
            <option value="">لطفاً یک مشخصه انتخاب کنید</option>
        </select>
        <span asp-validation-for="SpecificationId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Value">مقدار</label>
        <input asp-for="Value" class="form-control" />
        <span asp-validation-for="Value" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">ذخیره</button>
    <a asp-action="List" asp-route-productId="@Model.ProductId" class="btn btn-secondary">بازگشت</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}