@model EShop.Domain.ViewModels.Account.ForgotPasswordViewModel
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<main class="page-content page-auth">
    <!-- start of auth-container -->
    <div class="auth-container">
        <div class="auth-title mb-3">بازیابی رمز عبور</div>
        <!-- start of auth-box -->
        <div class="auth-box ui-box">
            <!-- start of auth-form -->
            <form asp-controller="Account" asp-action="ForgotPassword" class="auth-form">
                <!-- start of form-element -->
               
                <!-- end of form-element -->
                <!-- start of form-element -->
                <div class="form-element-row mb-3">
                   
                    <input asp-for="Email" type="text" class="form-control" placeholder="ایمیل تان را وارد کنید">
                </div>
                <!-- end of form-element -->
                <!-- start of form-element -->
                <div class="form-element-row">
                    <button type="submit" class="btn btn-primary">ارسال</button>
                </div>
                <!-- end of form-element -->
            </form>
            <!-- end of auth-form -->
        </div>
        <!-- end of auth-box -->
    </div>
    <!-- end of auth-container -->
</main>
