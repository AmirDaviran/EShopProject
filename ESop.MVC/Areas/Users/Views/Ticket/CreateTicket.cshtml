
@model EShop.Domain.ViewModels.Tickets.CreateTicketViewModel
@using EShop.Application.Utilities.Convertors
@using EShop.Domain.Enums.TicketEnums;

@{
    ViewData["Title"] = "افزودن تیکت جدید";
    Layout = "_MainLayout";
}

<main class="page-content">
    <div class="container">
        <div class="row mb-5">
            <div class="col-xl-3 col-lg-4 col-md-5 mb-md-0 mb-4">
                <aside>
                    @await Component.InvokeAsync("UserSideBar")
                </aside>
            </div>
            <div class="col-xl-9 col-lg-8 col-md-7">

                <div class="ui-box bg-white mb-5">
                    <div class="ui-box-title">ایجاد تیکت جدید</div>
                    <div class="ui-box-subtitle">
                        فرم زیر را پر کنید (توضیحات کامل تر روند پاسخ دهی را کوتاه تر
                        می
                        کند.)
                    </div>
                    <div class="ui-box-content">
                        <!-- start of add-ticket-form -->
                        <form asp-controller="Ticket" asp-action="CreateTicket" method="post" class="add-ticket-form" enctype="multipart/form-data">
                            <input type="hidden" asp-for="OwnerId" />
                            <div class="row">
                                <div class="col-md-6">
                                    <!-- start of form-element -->
                                    <div class="form-element-row mb-5">
                                        <label class="label">موضوع</label>
                                        <input asp-for="Title" type="text" class="form-control" placeholder="">
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                    <!-- end of form-element -->
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <!-- start of form-element -->
                                    <div class="form-element-row mb-5">
                                        <label class="label">بخش</label>
                                        <select class="form-control" asp-for="Section" asp-items="@Html.GetEnumSelectList<TicketSection>()">
                                        </select>
                                        <span asp-validation-for="Section" class="text-danger"></span>
                                    </div>
                                    <!-- end of form-element -->
                                </div>
                                <div class="col-md-6">
                                    <!-- start of form-element -->
                                    <div class="form-element-row mb-5">
                                        <label class="label">اولویت</label>

                                        <select class="form-control" asp-for="Priority" asp-items="@Html.GetEnumSelectList<TicketPriority>()">
                                        </select>

                                        <span asp-validation-for="Priority" class="text-danger"></span>
                                    </div>

                                    @*<--end of form-element-->*@

                                </div>

                            </div>

                            <div class="row">
                                <div class="col-12">
                                    <!-- start of form-element -->
                                    <div class="form-element-row mb-5">
                                        <label class="label">پیام</label>
                                        <textarea asp-for="Description" rows="5" class="form-control" placeholder="متن پیام"></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                    <!-- end of form-element -->
                                </div>
                                <div class="col-12">
                                    <!-- start of form-element -->
                                    <div class="form-element-row form-element-row-file mb-5">
                                        <div class="text-center">
                                            <div class="fs-6 fw-bold text-dark">
                                                عکس یا ویدیو خود را بارگذاری
                                                کنید.
                                            </div>
                                            <div class="fs-7 fw-bold text-muted mb-4">
                                                (حداکثر ۵ تصویر jpeg یا
                                                PNG
                                                حداکثر یک
                                                مگابایت، یک ویدیو MP4 حداکثر ۵۰ مگابایت )
                                            </div>
                                        </div>
                                        <div class="custom-input-file">
                                            <input type="file" asp-for="AttachmentFile" class="custom-input-file-input" name="AttachmentFile" id="attachment">
                                            <a href="/img/Ticket-Attachments/">دانلود فایل</a>
                                            <label for="attachment" class="custom-input-file-label">
                                                <span class="label">
                                                    <i class="ri-arrow-up-fill me-1"></i> انتخاب عکس یا ویدئو
                                                </span>
                                            </label>
                                        </div>
                                    </div>
                                    <!-- end of form-element -->
                                </div>
                                <div class="col-12 text-end">
                                    <button type="submit" class="btn btn-primary px-4">ثبت و ارسال<i class="ri-ball-pen-line ms-2"></i></button>
                                </div>
                            </div>
                        </form>
                        <!-- end of add-ticket-form -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>







