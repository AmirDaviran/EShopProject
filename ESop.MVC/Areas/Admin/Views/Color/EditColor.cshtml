@model EShop.Domain.ViewModels.Colors.EditColorViewModel
@{
    TempData["Title"] = "ویرایش رنگ در ادمین";
    Layout = "_AdminLayout";
}

    <div class="row">
        <!-- Basic Layout -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">فرم ثبت رنگ</h5>

                </div>
                <div class="card-body">
                    <form asp-area="Admin" asp-controller="Color" asp-action="EditColor" method="post">
                        <input type="hidden" asp-for="ColorId" />
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-name">نام رنگ</label>
                            <div class="col-sm-4">
                                <input asp-for="Name" type="text" class="form-control" id="basic-default-name" placeholder="">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-company">کد رنگ</label>
                            <div class="col-sm-4">
                                <input asp-for="Code" type="color" class="form-control input-color" id="basic-default-company" placeholder="">
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row justify-content-end">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">ویرایش</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
