@model EShop.Domain.ViewModels.Products.Product_Specification.AddSpecificationToProductViewModel
@{
    ViewData["Title"] = "اضافه کردن مشخصه به محصول";
}

<form asp-action="Add" method="post" class="form">
    <input type="hidden" asp-for="ProductId" />
    <div class="form-group">
        <label asp-for="SpecificationId">شناسه مشخصه</label>
        <input asp-for="SpecificationId" class="form-control" />
        <span asp-validation-for="SpecificationId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Value">مقدار</label>
        <input asp-for="Value" class="form-control" />
        <span asp-validation-for="Value" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">ثبت</button>
    <a asp-action="List" asp-route-productId="@Model.ProductId" class="btn btn-secondary">بازگشت</a>
</form>