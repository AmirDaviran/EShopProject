@model EditProductColorMappingViewModel

@using EShop.Domain.Entities.Colors
@{
    ViewData["Title"] = "ویرایش مپینگ رنگ محصول";
    var colors = ViewData["Colors"] as List<Color>;
}


<div class="col-xxl">
    <div class="card mb-4">
        <h5 class="card-header">ویرایش مپینگ رنگ محصول</h5>
        <form asp-area="Admin" asp-controller="Product" asp-action="EditProductColorMapping" method="post" class="card-body">
            <input type="hidden" asp-for="MappingId" />

            <div class="form-group">
                <label>رنگ محصول</label>
                <select asp-for="SelectedColorId" class="form-control" asp-items="@(new SelectList(colors, "Id", "Name"))">
                    <option value="">-- لطفا رنگ را انتخاب کنید --</option>
                </select>
                @*<span asp-validation-for="SelectedColorId" class="text-danger"></span>*@
            </div>

            <div class="form-group">
                <label>مقدار</label>
                <input type="number" asp-for="Amount" class="form-control" min="-2000000" max="2000000" />

            </div>

            <div class="pt-4">
                <button type="submit" class="btn btn-primary">ویرایش مپینگ</button>
                <a asp-action="ColorMappingLists" class="btn btn-secondary">لغو</a>
            </div>
        </form>
    </div>
</div>
